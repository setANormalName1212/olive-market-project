<%- include("partials/header") %>

<header class="bg-success p-3">
    <nav class="container">
        <a href="/" class="h3">Login</a>
    </nav>
</header>


<%- include("partials/messagess") %>

<section class="container d-flex justify-content-center m-5">
    <form action="/admin/add" method="post" class="row w-25 bg-success p-4 rounded">
        <label class="mt-3">
            <h3>Name</h3>
            <input type="text" name="name">
        </label>
        <label class="mt-3">
            <h3>Email</h3>
            <input type="email" name="email">
        </label>
        <label class="mt-3">
            <h3>Password</h3>
            <input type="password" name="password">
        </label>
        <label class="mt-3">
            <h3>Re-write password</h3>
            <input type="password" name="password2">
        </label>
        <button type="submit" class="mt-3 p-2 btn btn-warning">Register</button>
    </form>
</section>

